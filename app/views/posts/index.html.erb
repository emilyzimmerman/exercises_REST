<h1>Post Index</h1>

<%= link_to "Create New Post", new_post_path%>

<% @posts.each do |post|%>
   <div><b> <%= post.title%> </b></div>
   <div> <%= post.body%> </div>
   <%= link_to "Show", post_path(post)%>
   <%= link_to "Edit", edit_post_path(post)%>
   <%= button_to "Delete", post_path(post), method: :delete%>
<%end%>